@using System.ComponentModel.DataAnnotations
@inherits LayoutComponentBase
<div class="page d-flex min-vh-100">
    @* Sidebar *@
    <div class="sidebar @(sidebarCollapsed ? "collapsed" : "")">
        <NavMenu />
    </div>

    @* Main content *@
    <main class="d-flex flex-column w-100">

        @* Body *@
        <article class="content px-4 d-flex flex-column justify-content-center align-items-center flex-fill">
            @Body
        </article>

        @* Toggle button *@
        <button class="navbar-toggler position-absolute m-3" style="font-size: 2rem; color: #e6ddcb; transform: scaleX(1.25);" @onclick="ToggleSidebar">
            &#9776;
        </button>
    </main>
</div>

@code {
    private bool sidebarCollapsed;

    private void ToggleSidebar()
    {
        sidebarCollapsed = !sidebarCollapsed;
    }

}