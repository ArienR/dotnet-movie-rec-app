@page "/Register"

<PageTitle>Register</PageTitle>

<div class="flex flex-col justify-center items-center text-center min-h-screen">
    <h1 style="color: #e6ddcb;">Sign Up</h1>
    <div class="login-inputs-container gap-3 m-5">
        <input type="text" placeholder="Username" class="login-input text-center px-4 py-2 rounded-pill">
        <input type="text" placeholder="Email" class="login-input text-center px-4 py-2 rounded-pill">
        <input type="password" placeholder="Password" class="login-input password-input text-center px-4 py-2 rounded-pill">
        <input type="password" placeholder="Confirm Password" class="login-input password-input text-center px-4 py-2 rounded-pill">
    </div>
    <div class="login-buttons-container">
        <button class="login-button text-center px-4 py-2 rounded-pill">Register</button>
    </div>
</div>

